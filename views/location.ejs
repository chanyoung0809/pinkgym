<%- include('header', {title:"Pink Ladies Gym",  cssFiles:["reset.css", "header.css", "footer.css", "locate_products.css"]})%>
<div id="container">
    <div class="title">
        <h2><p>Location</p></h2>
    </div>
    <% locates.forEach((item, idx) => { %>
        <div class="regions">
            <div class="region_wrap" id="<%- item.engName %>">
                <div class="region_title">
                    <h2>핑크짐 <%- item.korName %></h2>
                    <strong><%- item.facility %></strong>
                </div>
                <div class="region_info">
                    <div class="region_visual <%- (idx % 2 == 0) ? 'left' : 'right' %>">
                        <img src="/img/<%- item.engName %>.jpg">
                        <div class="map">
                            <iframe src="<%- item.mapURL %>" width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                        </div>
                    </div>
                    <div class="region_text">
                        <p><strong>ADDRESS : </strong><%- item.address %></p>
                        <p><strong>TEL : </strong><%- item.Tel %></p>
                        <p><strong>주차 : </strong><%- item.parking %></p>
                        <p><strong>영업시간 : </strong><%- item.openingHours %></p>
                    </div>
                </div>
            </div>
        </div>
    <% }) %>
</div>    
<%- include('footer', {jsFiles:["header.js", "swiper.js", "mGnb.js", "login.js"]})%>